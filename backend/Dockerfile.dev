FROM python:3.14-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# NAM VST3 plugin directory (optional - for audio processing)
# Plugin must be built from source for Linux or mounted at runtime
# See: https://github.com/sdatkinson/NeuralAmpModelerPlugin
RUN mkdir -p /usr/lib/vst3
ENV NAM_VST3_PATH=/usr/lib/vst3/NeuralAmpModeler.vst3

# Install uv for fast dependency management
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Copy dependency files (from backend folder since context is project root)
COPY backend/pyproject.toml ./

# Install dependencies
RUN uv pip install --system -e ".[dev]"

# Copy application code (will be overwritten by volume mount)
COPY backend/ .

# Expose port
EXPOSE 8000

# Use bash entrypoint for migrations, then start app
ENTRYPOINT ["/bin/bash", "/app/entrypoint.sh"]
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
