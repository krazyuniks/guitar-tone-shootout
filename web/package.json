{
  "name": "guitar-tone-shootout-web",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "concurrently \"pnpm:dev:*\"",
    "dev:css": "tailwindcss -i ./static/src/styles.css -o ./static/dist/styles.min.css --watch",
    "build": "pnpm build:css && pnpm build:js",
    "build:css": "tailwindcss -i ./static/src/styles.css -o ./static/dist/styles.min.css --minify",
    "build:js": "esbuild static/src/app.js --bundle --minify --outfile=static/dist/app.min.js"
  },
  "devDependencies": {
    "tailwindcss": "^4.0.0",
    "flowbite": "^2.5.0",
    "esbuild": "^0.24.0",
    "concurrently": "^9.0.0"
  }
}
